<!-- app/views/users/index.html.erb -->
<%= link_to(image_tag("loghi/logo 3.png", class:"step-immagine login-immagine"), root_path) %>

<h1>List of Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.user_type %></td>
        <td>
          <%= link_to 'Toggle User Type', toggle_user_type_path(user), method: :patch, class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div>
send a new mail message
<%= link_to 'invia', new_email_message_path %>
</div>

